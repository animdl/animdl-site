---
interface Props {
	title: string;
	date: string;
	body: string;
	href: string;
}

const { href, title, body, date } = Astro.props;
---

<li class="link-article">
	<a class="flex justify-between items-start gap-4 mb-5 sm:mb-4 group" href={href}>
        <div class="grow">
            <h2 class="text-xl leading-tight font-medium group-hover:underline group-hover:underline-offset-4">
                {title}
            </h2>
            <div class="mt-2 text-sm leading-normal">
                {date}
            </div>
            <div class="mt-1 text-sm leading-normal">
                {body}
            </div>
        </div>
        <div class="hidden italic opacity-0 transition group-hover:opacity-100 sm:inline-flex sm:gap-1 sm:items-center sm:shrink-0">
            Read Post <span>&rarr;</span>
        </div>
	</a>
</li>
<style>
	.link-article {
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
	}
	.link-article > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-article:is(:hover, :focus-within) {
		//background-position: 0;
		//background-image: var(--accent-gradient);
	}
	.link-article:is(:hover, :focus-within) h2 {
		//color: rgb(var(--accent-light));
	}
</style>
